@using File_Sharing_App.Areas.Admin.Models
@model List<ContactUSViewModel>
@{
    ViewData["Title"] = "Contact us";
}
<section class="content">

 <!-- /.row -->
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Responsive Hover Table</h3>

                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                 <div id="Contact-table-wrapper2" class="col-md-12"></div>
                <table class="table table-hover text-nowrap" id="Contact-table">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Date</th>
                      <th>Status</th>
                      <th>Subject</th>
                      <th>Details</th>
                      <th>Change Status</th>
                    </tr>
                  </thead>
                  <tbody>
                      @foreach (var item in Model)
                      {
                       <tr>
                      <td>@item.Name</td>
                      <td><span class="Date-format">@item.SentDate.ToString("yyyy/MM/dd hh:mm:ss",new System.Globalization.CultureInfo("en-US"))</span></td>
                      <td><span class="tag @(item.IsClosed?"tag-success":"tag-danger")">@(item.IsClosed?"Closed":"Opened")</span></td>
                      <td>@item.Subject</td>
                      <td>
                          <a asp-action="Details" asp-area="Admin" asp-controller="Contact" asp-route-id="@item.Id">Details</a>

                      </td>
                      <td>
                          <form asp-action="ChangeStatus" id="Status-Form-@item.Id">
                           <input type="hidden" value="@item.Id" name="Id">
                          <select onchange="document.getElementById('Status-Form-@item.Id').submit()" name="IsClosed" class="form-control">
                              <option selected>Select Status</option>
                              <option value="false">Open</option>
                              <option value="true">Closed</option>
                          </select>
                          </form>
                      </td>
                       </tr>
                        }
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
        <!-- /.row -->
        </section>
 @section scripts{
<script src="~/Admin/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/Admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="~/Admin/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
<script src="~/Admin/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
<script src="~/Admin/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
<script src="~/Admin/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
<script src="~/Admin/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
<script src="~/Admin/plugins/datatables-buttons/js/buttons.print.min.js"></script>
<script src="~/Admin/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
<script src="~/Admin/plugins/jszip/jszip.min.js"></script>
<script src="~/Admin/plugins/pdfmake/pdfmake.min.js"></script>
<script src="~/Admin/plugins/pdfmake/vfs_fonts.js"></script>

<script>
  $(function () {
    $("#Contact-table").DataTable({
      "responsive": true, "lengthChange": false, "autoWidth": false,
      "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
    }).buttons().container().appendTo("#Contact-table_wrapper .col-md-6:eq(0)");
  });
    </script>
    }
        