 @model IEnumerable<File_Sharing_App.Models.UploadViewModel>
@{
    ViewData["Title"] = "Browse";
}

<h1>Browse Uploads</h1>
<hr />

@Html.Partial("BroweResultView")

    <div class="col-12 text-center">
    <div>
        @if(ViewBag.CurrentPage-1>0)
        {
        <a href="/Uploads/Browse?RequiredPage=@(ViewBag.CurrentPage-1)" class="btn btn-outline-primary align-left btn-lg">Prev</a>    
        }
        @if(ViewBag.CurrentPage + 1 <= ViewBag.pagecount)
        {
        <a href="/Uploads/Browse?RequiredPage=@(ViewBag.CurrentPage+1)" class="btn btn-outline-primary align-right btn-lg">Next</a>    
        }
    </div>
</div>