@model ResetPasswordViewModel
@inject IViewLocalizer  Localizer
@{
    ViewData["Title"] = @Localizer["Title"];
}
<section id="mu-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-contact-area" style="padding-top:10px">
                    <!-- Title -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mu-title">
                                <h1>@Localizer["Title"]</h1>
                            </div>
                        </div>
                    </div>
                    <!-- Start Contact Content -->
                    <div class="mu-contact-content">
                        <div class="row">

                            <div class="col-md-12">
                                <div class="mu-contact-form-area">
                                    <div id="form-messages"></div>
                                    <form asp-action="ResetPassword">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <input type="password" asp-for="NewPassword" class="form-control" placeholder="@Localizer["NewPassword"]">
                                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                                        </div>
                                        <br />
                                          <div class="form-group">
                                            <input type="password" asp-for="ConfirmNewPassword" class="form-control" placeholder="@Localizer["ConfirmNewPassword"]">
                                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                        </div>
                                        <input type="hidden" asp-for="Email" value="@Context.Request.Query["Email"]" />
                                        <input type="hidden" asp-for="Token" value="@Context.Request.Query["Token"]" />
                                        <button type="submit" class="mu-send-msg-btn"><span>@Localizer["Submit"]</span></button>
                                    </form>
                                </div>
                            </div>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>